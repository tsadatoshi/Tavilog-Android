<RelativeLayout
	android:layout_width="@dimen/ajax_list_width"
	android:layout_height="@dimen/ajax_list_height"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="@dimen/base_padding"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".StationActivity">
	<LinearLayout
		android:layout_width="@dimen/ajax_list_width"
		android:layout_height="match_parent"
		android:layout_marginTop="@dimen/base_padding"
		android:layout_marginLeft="@dimen/base_padding"
		android:background="@drawable/radiusbox"
		android:paddingLeft="@dimen/ajax_result_text_start"
		android:orientation="vertical">
		<TextView
			android:id="@+id/textViewListHPCategory"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:text="@string/hello_world"
			android:textSize="@dimen/normal_small_font"
			android:textColor="@color/gray_text" />
		<TextView
			android:id="@+id/textViewListHPShop"
			android:layout_width="wrap_content"
			android:layout_height="57dp"
			android:ellipsize="end"
			android:maxLines="2"
			android:scrollHorizontally="true"
			android:text="@string/hello_world"
			android:textSize="@dimen/normal_font"
			android:textColor="@color/base_text" />
		<TextView
			android:id="@+id/textViewListHPAccess"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="2"
			android:scrollHorizontally="true"
			android:text="@string/hello_world"
			android:textColor="@color/gray_text"
			android:textSize="@dimen/minimum_font" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="right"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/imageViewListHPImage"
			android:layout_width="@dimen/ajax_result_picture"
			android:layout_height="@dimen/ajax_result_picture"
			android:scaleType="fitStart"
			android:src="@drawable/ic_launcher"
			android:contentDescription="@string/d_shopimg" />
		<Button
			android:id="@+id/buttonHP"
			android:background="#ffa500"
			android:textColor="@color/btn_base_text"
			android:layout_marginTop="4dp"
			android:layout_width="@dimen/ajax_result_btn_width"
			android:layout_height="@dimen/ajax_result_btn_height"
			android:textSize="@dimen/minimum_font"
			android:text="@string/btn_hp" />
	</LinearLayout>
</RelativeLayout>